<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ProgressBar
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/progess_Bar"
        android:layout_marginTop="30dp"
        android:max="100"
        android:visibility="invisible"
        android:progress="100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/textCountDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@id/progess_Bar"
        app:layout_constraintEnd_toEndOf="@id/progess_Bar"
        app:layout_constraintStart_toStartOf="@id/progess_Bar"
        app:layout_constraintTop_toTopOf="@id/progess_Bar" />

    <Button
        android:id="@+id/showCountDown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progess_Bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Show Count Down"/>

    <TextView
        android:id="@+id/textHandler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/showCountDown"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:hint="Count Down"
        android:text="Count Down"
        android:textColor="@color/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/showHandler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textHandler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Show Handler"/>

</androidx.constraintlayout.widget.ConstraintLayout>